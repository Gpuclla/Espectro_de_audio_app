<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wllpaper"
    tools:context=".botones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btngato"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/gato"
            android:layout_margin="30dp"/>

        <ImageButton
            android:id="@+id/btnperro"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/perro"
            android:layout_margin="30dp"/>
        <com.gauravk.audiovisualizer.visualizer.WaveVisualizer
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle"
            android:layout_weight="2"
            android:layout_width="300dp"
            android:layout_height="0dp"
            custom:avDensity="0.8"
            custom:avType="fill"
            custom:avColor="@color/av_green"
            custom:avSpeed="normal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>